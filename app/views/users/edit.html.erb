<%= flash[:notice] %>
<div class="col-md-6 mx-auto">
  <h1>User info</h1>
  <%= form_for(@user) do |f| %>
  <%= render 'books/error', model: @user %>
  
    <div class="row mt-3 mx-auto">
      <lavel for="inputName">Name</lavel>
      <%= f.text_field :name, class: "col-md-12 mt-2", autofocus: true, id:"inputName", placeholder:"名前" %>
    </div>

    <div class="row mt-3 mx-auto">
      <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
      <label for="inputImage">Image</label>
      <%= f.attachment_field :profile_image, class: "col-md-12 mt-2", placeholder: "プロフィール画像" %>
    </div>

    <div class="row mt-3 mx-auto">
      <lavel for="inputInstroduction">Introduction</lavel>
      <%= f.text_area :introduction, class: "col-md-12 mt-2", placeholder: "紹介文" %><br>
    </div>

    <%= f.submit " Update User", class: "mt-3" %>

  <% end %>
</div>